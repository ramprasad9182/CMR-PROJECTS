<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="nhcl_view_invoice_tree_view" model="ir.ui.view">
        <field name="name">Account Move</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="project_name"
                       column_invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund', 'in_receipt')"
                       widget="many2many_tags"/>
            </xpath>
            <xpath expr="//field[@name='invoice_partner_display_name']" position="after">
                <field name="cmr_product_id"
                       column_invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund', 'in_receipt')"/>
                <field name="po_ref_number"
                       column_invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund', 'in_receipt')"/>
                <field name="po_date"
                       column_invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund', 'in_receipt')"/>
                <field name="po_amount"
                       column_invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund', 'in_receipt')"
                       sum="Total"/>
                <field name="paid_amount"
                       column_invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund', 'in_receipt')"
                       sum="Total"/>
                <field name="payment_due"
                       column_invisible="context.get('default_move_type') not in ('in_invoice', 'in_refund', 'in_receipt')"
                       sum="Total"/>
            </xpath>
        </field>
    </record>

